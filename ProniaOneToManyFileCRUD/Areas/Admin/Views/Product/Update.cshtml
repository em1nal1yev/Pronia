@model Product


<div class="container">
	<form asp-action="Update" method="post" enctype="multipart/form-data">
		<div>
			<label>Product adi daxil edin</label>
			<input asp-for="Name" class="form-control" value="@Model.Name"/>
			<span asp-for="Name" asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div>
			<label>Product qiymeti daxil edin</label>
			<input asp-for="Price" class="form-control" value="@Model.Price" />
			<span asp-for="Price" asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div>
			<label>Product aciqlamasi daxil edin</label>
			<input asp-for="Description" class="form-control" value="@Model.Description" />
			<span asp-for="Description" asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div>
			<label>Sekil daxil edin</label>
			<input asp-for="File" type="file" class="form-control" />
			<span asp-for="File" asp-validation-for="File" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CategoryId" class="control-label"></label>
			<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" >
				<option value="@Model.Category.Name"></option>
			</select>
		</div>
		<button type="submit" class="btn btn-primary">Yadda saxla</button>
		<a href="/Admin/Product/Index" class="btn btn-secondary">Geri Qayıt</a>
	</form>
</div>